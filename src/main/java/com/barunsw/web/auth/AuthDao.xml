<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.barunsw.web.auth.AuthDao">

	<select id="authList" resultType="com.barunsw.web.auth.AuthVo">
		SELECT
			auth_id, auth_name
		FROM
			tb_auth
		ORDER BY 
			auth_id ASC
	</select>
	
	<select id="userAuthList" resultType="com.barunsw.web.auth.AuthVo">
		SELECT
			auth_id, auth_name, user_id, user_name
		FROM
			tb_user_auth
		WHERE
			auth_id = #{authId}
	</select>
	
	<select id="userNoAuthList" resultType="com.barunsw.web.auth.AuthVo">
		SELECT
			auth_id, user_id, user_name
		FROM
			tb_user
		WHERE
			auth_id = 3
	</select>

	<insert id="insertAuth" parameterType="com.barunsw.web.auth.AuthVo">
		INSERT INTO tb_auth
			(auth_id, auth_name)
		VALUES 
			(#{authId}, #{authName})
	</insert>

	<update id="updateAuth" parameterType="com.barunsw.web.auth.AuthVo">
		UPDATE tb_auth
		SET 
			auth_id 		= #{authId},
			auth_name 		= #{authName}
		WHERE 
			auth_id 		= #{authId}
	</update>

	<delete id="deleteAuth" parameterType="com.barunsw.web.auth.AuthVo">
		DELETE FROM 
			tb_auth
		WHERE 
			auth_id = #{authId}
	</delete>
	
</mapper>